@model IList<VivesActivity>
@{
    ViewData["Title"] = "Manage Activies";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-dark table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Type</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var activity in Model)
    {
        <tr>
            <td>@activity.Name</td>
            <td>@activity.Location</td>
            <td>@activity.Type</td>
        </tr>
    }
    </tbody>
</table>